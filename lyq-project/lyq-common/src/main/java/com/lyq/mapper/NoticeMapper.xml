<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lyq.dao.notice.NoticeDao">
    <resultMap id="res" type="com.lyq.entity.notice.vo.NoticeVo" />

    <select id="queryPage" resultMap="res" >
        select n.* from notice n
        <where>
            and n.status != 'DEL'
            <if test="param!=null and param.title!=null and param.title!=''">
                and n.title like concat('%', #{param.title}, '%')
            </if>
        </where>
    </select>

</mapper>